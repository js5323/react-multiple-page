{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true, // 不允许隐式any类型
    "module": "es6", // 模块引入方式
    "target": "es5", // 打包后编译成什么形式
    "jsx": "react-jsx", // 引入react
    "allowJs": true, // 在ts文件中允许引入js文件
    "moduleResolution": "node", // 引入模块的方式
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
